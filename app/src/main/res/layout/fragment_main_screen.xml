<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warm"
    android:id="@+id/mainlayout"
    tools:context="com.loeryg.myapplication2.app.MainScreen">

    <!-- TODO: Update blank fragment layout -->


    <ImageButton
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/circle"
        android:background="@layout/circle"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:visibility="gone"
        android:id="@+id/ftempview"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="100sp"
        android:paddingBottom="30sp"
        android:paddingRight="30sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="false" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/feelslike"
        android:visibility="gone"
        android:id="@+id/feelslike"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="120sp"
        android:paddingRight="40sp"
        android:layout_alignRight="@+id/circle"
        android:layout_alignEnd="@+id/circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="50sp"
        android:text="°C"
        android:visibility="gone"
        android:id="@+id/degrees"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="60sp"
        android:paddingRight="30sp"
        android:layout_alignRight="@+id/circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="loading..."
        android:id="@+id/mscreenupdated"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°F to °C"
        android:id="@+id/degreeswap"
        android:background="#33B5E5"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="Refresh"
        android:textColor="#FFFFFF"
        android:background="#33B5E5"
        android:id="@+id/refreshbutton"
        android:layout_above="@+id/mscreenupdated"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarM"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
    />


</RelativeLayout>
